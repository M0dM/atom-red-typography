{
  "name": "red-typography",
  "main": "./lib/red-typography",
  "version": "1.0.0",
  "description": "Red Typography for Atom. Select text, press shortcuts `Ctrl+Option+T` (macOS) or `Ctrl+Alt+T` (Linux/Windows) for typographing text.",
  "keywords": [
  ],
  "activationCommands": {
    "atom-workspace": ["red-typography:process", "red-typography:settings"]
  },
  "repository": "https://github.com/red-typography/atom-red-typography",
  "license": "MIT",
  "configSchema": {
    "locale": {
      "type": "string",
      "default": "en-US",
      "order": 10,
      "enum": [
        { "value": "be", "description": "Belarusian" },
        { "value": "bg", "description": "Bulgarian" },
        { "value": "ca", "description": "Catalan" },
        { "value": "cs", "description": "Czech" },
        { "value": "da", "description": "Danish" },
        { "value": "de", "description": "German" },
        { "value": "el", "description": "Greek" },
        { "value": "en-GB", "description": "English, UK" },
        { "value": "en-US", "description": "English, US; English, Canada" },
        { "value": "eo", "description": "Esperanto" },
        { "value": "es", "description": "Spanish" },
        { "value": "et", "description": "Estonian" },
        { "value": "fi", "description": "Finnish" },
        { "value": "fr", "description": "French" },
        { "value": "ga", "description": "Irish" },
        { "value": "hu", "description": "Hungarian" },
        { "value": "it", "description": "Italian" },
        { "value": "lv", "description": "Latvian" },
        { "value": "nl", "description": "Dutch" },
        { "value": "no", "description": "Norwegian" },
        { "value": "pl", "description": "Polish" },
        { "value": "ro", "description": "Romanian" },
        { "value": "ru", "description": "Russian" },
        { "value": "sk", "description": "Slovak" },
        { "value": "sl", "description": "Slovenian" },
        { "value": "sr", "description": "Serbian" },
        { "value": "sv", "description": "Swedish" },
        { "value": "tr", "description": "Turkish" },
        { "value": "uk", "description": "Ukrainian" }
      ]
    },
    "type": {
      "type": "string",
      "default": "UTF-8",
      "description": "Type of HTML entities",
      "order": 20,
      "enum": [
        { "value": "UTF-8", "description": "UTF-8, “A”" },
        { "value": "name", "description": "As names, &ldquo;A&rdquo;" },
        { "value": "digit", "description": "As digits, &#8220;A&#8221;" }
      ]
    },
    "onlyInvisible": {
      "type": "boolean",
      "default": false,
      "description": "HTML entities only for invisible symbols",
      "order": 30
    },
    "enableRules": {
      "type": "string",
      "default": "",
      "description": "Specify [rules](https://github.com/typograf/typograf/blob/dev/docs/RULES.en-US.md) to enable, separated by commas.\nExample: `common/nbsp/replaceNbsp,ru/optalign/*`",
      "order": 40
    },
    "disableRules": {
      "type": "string",
      "default": "",
      "description": "Specify [rules](https://github.com/typograf/typograf/blob/dev/docs/RULES.en-US.md) to disable, separated by commas.\nExample: `common/space/afterPunctuation,common/space/trimLeft`",
      "order": 50
    }
  },
  "engines": {
    "atom": ">=1.16.0 <2.0.0"
  },
  "dependencies": {
      "typograf": "^6.4.0"
  }
}
